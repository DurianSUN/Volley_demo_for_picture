        android:layout_height="100dp" />
    <ImageView
        android:id="@+id/id_pic_02"
        android:layout_margin="3dp"
        android:layout_width="400dp"
        android:layout_height="100dp" />
    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/id_pic_03"
        android:layout_width="400dp"
        android:layout_height="100dp" />
    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/id_pic_04"
        android:layout_width="400dp"
        android:layout_height="100dp" />

</LinearLayout>
